<header class="header">
    <section class="header-maxwidth-body">
        <div class="index-logo">
            <a href="/"><img src="/images/logo-gota.svg" alt="logo de allclean" class="index-imglogo"></a>
            <a href="/">All Clean</a>
        </div>
        
        <section class="header-searchbare">
            <form action="/search" method="GET" class="header-searchbar">
                <input type="text" name="search" placeholder="¿Qué producto buscas?">      
                <button type="submit" class="lupa" ><i class="fas fa-search"></i></button>
            </form>
        </section>
              
        
        <section class="header-rightmenu">
            <div class="menu-area">
                <% if(locals.isLogged) { %>
                    <div class="menu-area-user">
                        <a href="/users/userProfile">
                            <img src='/images/avatars/<%= locals.userLogged.avatar %>'>                          
                        </a> 
                    </div>
                <nav class="menu-opc">    
                    <ul> 
                        <li><a href="/users/Logout">Logout</a></li>               
                        <li><a href="/users/userProfile"> Mi cuenta</a></li>
                    </ul>
                        <% } else { %>
                            <div>
                                <i class="fas fa-user"></i>
                            </div>
                    <nav class="menu-opc">    
                        <ul> 
                            <li><a href="/users/Register">Registro</a></li>
                            <li><a href="/users/Login">Login</a></li>
                            <% } %> 
                        </ul>
                    </nav>
                </nav>   
             
            
            <div>
                <a href=""><i class="far fa-heart"></i></a>
            </div>
            <div> 
                <a href="/products/cart"><i class="fas fa-shopping-cart" ></i></a>
            </div>     
        </div>        
        </section>

        <section class="hamburgermenu"><i class="fas fa-bars barras" id="menu-icon" ></i>
            <nav>
                <ul class="opc" id="opc">
                    <li class="option"><a href="/"><i class="fa-solid fa-droplet"></i>Inicio</li></a>
                    <li class="option"><a href="/products"><i class="fa-regular fa-spray-can-sparkles"></i>Productos</li></a>
                    <li class="option"><a href=""><i class="fa-solid fa-broom-ball"></i>Quienes somos</li></a>
                    <li class="option"><a href=""><i class="fa-regular fa-hand-holding-droplet"></i>Servicios</li></a> 
                    <li class="option"><a href="/products/cart"><i class="fas fa-shopping-cart" ></i>Carrito</li></a>                                                           
                    <li class="submenu-btn option"><a href="#"><i class="fas fa-user"></i>Mi cuenta<i class="fas fa-chevron-down flecha-down"></i></a>
                        <ul class="submenu-opc">
                            <% if(locals.isLogged) { %>
                                <li><a href="/users/userProfile"><img class="pic-user" src='/images/avatars/<%= locals.userLogged.avatar %>'>Mi perfil</li></a>
                                <li><a href="/users/Logout"><i class="fa-solid fa-arrow-right-from-bracket"></i>Log out</li></a>
                            <% } else { %>
                                <li><a href="/users/Register">Registro</li></a>
                                <li><a href="/users/Login">Login</li></a>                              
                            <% } %>
                        </ul>
                    </li>                      
                     <li class="submenu-btn option"><a href="#"><i class="fas fa-bars"></i>Categorias<i class="fas fa-chevron-down flecha-down"></i></a>
                        <ul  class="submenu-opc">
                            <% for( let categoria of constants.generalCategory ) { %>
                                <li><a href="/products/category/<%= categoria.name %>"><%= categoria.name %></a></li>
                            <% } %>
                        </ul>
                    </li>   
                                          
                </ul>
            </nav>
        </section>
    </section>

</header>

