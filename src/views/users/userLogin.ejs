<!DOCTYPE html>
<html lang="en">

<!-- Scripts -->
<script src="/js/front-end-validations/userLoginFrontValidations.js"></script>
<!-- Scripts -->

<!-- Include Head -->
<%- include('../partials/head.ejs', {title: 'Login'}) %>
<!-- Include Head -->

<body class="body">
    <!-- Include Header-->
    <%- include('../partials/header.ejs') %>
    <!-- Include Header-->

    <!-- User Login -->
    <form action="/users/login" method="post" class="login-create-form" onsubmit="return validateForm()" name="login-form" id="login-form">
        <h2>Bienvenido</h2>
        <h3>Ingrese sus credenciales</h3>

        <div class="register-control-formulario">
            <div class="register-icon-container">
                <i class="far fa-envelope"></i>
            </div> 
            <input type="email" name="email" placeholder="Ingrese su mail" class="register-control" id="login-email" value="<%= locals.oldData ? locals.oldData : "" %>">
            <% if (locals.errors && errors.email) { %>
                <div class="register-text-danger">
                     <%= errors.email.msg %> 
                </div>
            <% } %>
            <div class="register-text-danger">
                <small class="errorEmail"></small> 
            </div>
        </div>
        
        <div class="register-control-formulario">
            <input type="password" name="password" id="password" placeholder="Ingrese su password" class="register-control">
            <div class="register-eye-container">
                <i id="visibilityBtn" class="register-eye"><span id="icon" class="material-icons-outlined">visibility</span></i>
            </div>
            <% if (locals.errors && errors.password) { %>
                <div class="register-text-danger">
                     <%= errors.password.msg %> 
                </div>
            <% } %>
            <div class="register-text-danger">
                <small class="errorPassword"></small> 
            </div>
        
            <div>
                <label class="user-remember"><input type="checkbox" name="remember_user"> Recordarme</label>
            </div>

            <% if(locals.errors && errors.datosInvalidos) { %>
                <div class="register-text-danger login-error">
                   <%= errors.datosInvalidos.msg %>
                </div>        
            <% } %>
        </div>
        
        <h3 class="login-forgot-pass"><a href="#">¿Olvidaste tu contraseña?</a></h3>
        <button type="submit" class="login-submit" id="login-submit">Iniciar Sesión</button>
    </form>
    <!-- User Login -->

    <!-- Include Footer-->
    <%- include('../partials/footer.ejs') %>
    <!-- Include Footer-->

    <!-- Scripts -->
    <script src="/js/register-eye.js"></script>
    <!-- Scripts -->
</body>
</html>